<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>opendof-ir-servlet</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>InterfaceRepository</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.opendof.tools.repository.interfaces.servlet.InterfaceRepository</param-value>
		</init-param>
		<init-param>
			<param-name>opendof.tools.interface.repository.config</param-name>
			<param-value>/etc/opt/opendof/interface-repository/interface-repository.properties</param-value>
		</init-param>
        <init-param>
            <param-name>opendof.tools.interface.repository.translations</param-name>
            <!-- 
                The deployed translations are shipped in and the servlet defaults to 
                this value if not specified here.  The given value is an example of 
                the folder translation at the context root.  
                To add new translations follow the naming pattern of "[type]-translation.xsl".  
                On a deployed server files matching the pattern given and be added to the 
                translations folder at any time.  Browser side simply needs to match 
                the base "[type]" on requests
             -->
            <param-value>/translation/</param-value>
        </init-param>
        <init-param>
            <param-name>opendof.tools.interface.repository.catalogs</param-name>
            <!-- 
                The deployed catalogs are shipped in and the servlet defaults to 
                this value if not specified here.  The given value is an example of 
                the folder catalog at the context root.  
                The RepositoryController implementations will be given the path to
                this folder where xerces/oasis catalog files can be found.  It is suggested 
                that the repository type (see translations above) be used as the catalog.xml
                files.  For example the opendof implementation will use: /catalog/opendof.xml.
             -->
            <param-value>/catalog/</param-value>
        </init-param>
	</filter>
	<filter-mapping>
		<filter-name>InterfaceRepository</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<resource-ref>
		<description>OpenDOF.org MySQL Datasource</description>
		<res-ref-name>jdbc/interfacerepository</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<session-config>
	    <session-timeout>120</session-timeout>
	</session-config>
</web-app>



                            